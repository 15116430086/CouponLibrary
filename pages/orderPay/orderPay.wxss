/* pages/orderPay/orderPay.wxss */

page {
    width: 100%;
    height: 100%;
    background-color: #EDEDED;
}

.goods-mes {
    width: 100%;
    height: auto;
    background-color: #ffffff;
    font-size: 15px;
    color: #333333;
    font-weight: 600;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.goodsmes-mes {
    width: calc(100% - 40px);
    height: 80px;
    margin-top: 21px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px dashed #eeeeee;
}

.goodsmes-mes image {
    display: block;
    width: 40px;
    height: 40px;
    margin-right: 11px;
    border-radius: 50%;
    flex-shrink: 1;
}

.goodsmesmes-box {
    display: flex;
    flex-direction: row;
}

.goodsmes-mes-ul-one {
    width: 248px;
}

.goodsmes-mes-ul-one li {
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.goodsmes-price {
    text-align: right;
    font-size: 13px;
    color: #999999;
}

.goods-num,
.goods-plan,
.goods-ticket,
.goods-wrt,
.goods-true {
    width: calc(100% - 46px);
    height: 49px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.goods-wrt input,
.numbox input {
    display: block;
    width: 100px;
    height: 20px;
    border: none;
    outline: none;
    -webkit-appearance: none;
}

 ::-webkit-input-placeholder {
    /* Chrome/Opera/Safari */
    color: #cccccc;
    font-size: 14px;
    text-align: right;
}

 ::-moz-placeholder {
    /* Firefox 19+ */
    color: #cccccc;
    font-size: 14px;
    text-align: right;
}

 :-ms-input-placeholder {
    /* IE 10+ */
    color: #cccccc;
    font-size: 14px;
    text-align: right;
}

 :-moz-placeholder {
    /* Firefox 18- */
    color: #cccccc;
    font-size: 14px;
    text-align: right;
}

.numbox {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.numbox input {
    width: 25px;
    text-align: center;
    display: block;
}

.numbox image {
    display: block;
    flex-shrink: 1;
}

.numbox text {
    color: #ededed;
    font-size: 13px;
    font-weight: 500;
    margin-right: 10px;
}

.jian {
    margin-right: 6px;
    width: 20px;
    height: 20px;
}

.jia {
    margin-left: 6px;
    width: 20px;
    height: 20px;
}

.pay-btn {
    display: block;
    width: 335px;
    height: 49px;
    background: rgba(232, 88, 25, 1);
    opacity: 1;
    border-radius: 10px;
    margin: 16px auto;
    text-align: center;
    font-size: 16px;
    line-height: 49px;
    color: #ffffff;
    padding: 0;
    border: 1px solid transparent;
    outline: none;
}
.notpay-btn {
    display: block;
    width: 335px;
    height: 49px;
    background: rgb(122, 121, 120);
    opacity: 1;
    border-radius: 10px;
    margin: 16px auto;
    text-align: center;
    font-size: 16px;
    line-height: 49px;
    color: #ffffff;
    padding: 0;
    border: 1px solid transparent;
    outline: none;
}