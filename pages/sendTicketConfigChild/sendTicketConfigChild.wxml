<view class="home-top">
    <view class="bot-block">
        <view class="home-title">会员自领</view>
        <view class="home-right">
            <van-switch checked="{{ checked }}" active-color="#E85819" inactive-color="#CCCCCC" size="36rpx" bind:change="onChange" data-index="1" />
        </view>
    </view>
    <view class="bot-block">
        <view class="home-title">员工赠送</view>
        <view class="home-right">
            <van-switch checked="{{ checked1 }}" active-color="#E85819" inactive-color="#CCCCCC" size="36rpx" bind:change="onChange" data-index="2" />
        </view>
    </view>
    <view class="radio-block" wx:if="{{checked1}}">
        <van-radio-group value="{{ radio }}" bind:change="radioChange">
            <van-cell-group>
                <van-cell title="全部员工" value-class="value-class" title-class="title-class" clickable data-name="1" bind:click="onClick">
                    <van-radio name="1" checked-color="#E85819" />
                </van-cell>
                <van-cell title="店铺员工" value-class="value-class" title-class="title-class" clickable data-name="2" bind:click="onClick">
                    <van-radio name="2" checked-color="#E85819" />
                </van-cell>
            </van-cell-group>
        </van-radio-group>
    </view>
    <view class="check-block" wx:if="{{radio == 2}}">
        <block wx:for="{{memberList}}" wx:key="id">
            <view class='item_container' bindtap='isOpen' data-index='{{index}}'>
                <text class='text3'>{{item.name}}</text>
                <image class='select_icon' src="{{item.isSelected?'/static/images/f1.png':'/static/images/f2.png'}}"></image>
            </view>
            <view hidden="{{item.isSelected}}">
                <block wx:for="{{item.invalidActivty}}" wx:for-index="index" wx:for-item="items" wx:key="index">
                    <view class='item_container' bindtap='itemSelected' data-index='{{index}}' data-id='{{items.cdId}}'>
                        <view class="txt">
                            <text class="text1">{{items.fName}}</text>
                            <text class='text'>{{items.cdName}}</text>
                        </view>
                        <image class='select_icon' src="{{items.cdType?'/static/images/f1.png':'/static/images/f2.png'}}"></image>
                    </view>
                </block>
            </view>
        </block>
        <!-- <van-checkbox-group value="{{ result }}" bind:change="checkChange">
            <van-cell-group>
                <van-cell  wx:for="{{ list }}" wx:key="index" title="复选框 {{ item }}" value-class="value-class" clickable data-index="{{ index }}" bind:click="toggle">
                    <van-checkbox catch:tap="noop" class="checkboxes-{{ index }}" name="{{ item }}" custom-class="custom-class" shape="square" checked-color="#E85819"/>
                </van-cell>
            </van-cell-group>
        </van-checkbox-group> -->
    </view>
</view>