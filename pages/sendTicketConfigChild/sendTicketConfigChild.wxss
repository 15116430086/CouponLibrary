page {
    background-color: #EDEDED;
}

.home-top {
    width: 100%;
    height: auto;
    background-color: #ffffff;
    margin-bottom: 20rpx;
}

.home-title {
    color: #000000;
    font-size: 32rpx;
    /* font-weight: 600; */
}

.bot-block {
    width: calc(100% - 80rpx);
    height: 98rpx;
    margin: 0px auto;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.bot-flex{
    width: 100%;
    height: auto;
}
.b-price{
    width: 300rpx;
    color: #000000;
    font-size: 32rpx;
    text-align: right;
}

.home-right input{
    width: 300rpx;
    color: #000000;
    text-align: right;

}


.radio-block {
    width: calc(100% - 60rpx);
    height: auto;
    margin: 0px auto;
}

.check-block {
    width: calc(100% - 120rpx);
    height: auto;
    margin: 0px auto;
    /* padding-left: 40rpx; */
}

.part-block {
    width: 100%;
    height: auto;
    margin: 0px auto;
    /* padding-left: 40rpx; */
}

.two-title {
    color: #333333;
    font-size: 28rpx;
    text-indent: 20rpx;
}

.value-class {
    flex: none !important;
}

.title-class {
    color: #000;
    font-weight: 600;
}

.custom-class {
    width: 40rpx;
    height: 40rpx;
}

.item_container {
    width: 100%;
    height: 88rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #EDEDED;
}

.select_icon {
    width: 40rpx;
    height: 40rpx;
}

.txt {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-left: 40rpx;
}

.text {
    color: #666666;
    font-size: 28rpx;
}

.text3 {
    color: #666666;
    font-size: 28rpx;
    text-indent: 40rpx;
    font-weight: 600;
}

.text1 {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    background-color: #cccccc;
    font-size: 24rpx;
    color: #ffffff;
    margin-right: 20rpx;
    line-height: 40rpx;
    text-align: center;
    display: block;
}


