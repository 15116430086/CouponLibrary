/* pages/staffLoginReg/staffLoginReg.wxss */
page{
  background-color: #EDEDED;
  height: 100%
}
.v-box{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center
}

.v-box image{
  width: 133rpx;
  height: 133rpx;
}

.v-tip{
  color:#333333;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 40rpx;
  width: calc(100% - 240rpx);
  text-align: center;
}

.v-box button{
  display: block;
  margin-top: 212rpx;
  width: 670rpx;
  height: 98rpx;
  text-align: center;
  line-height: 98rpx;
  color:#FFF;
  font-size: 32rpx;
  border-radius: 20rpx;
  background-color: #E85819
}