/* pages/getTicketList/getTicketList.wxss */

@import"/template/HotTicket/HotTicket.wxss";
.search-box {
    width: 554rpx;
    height: 72rpx;
    background: rgba(239, 239, 239, 1);
    border-radius: 20rpx;
    font-size: 24rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    font-weight: 500;
    line-height: 34rpx;
    color: #cccccc;
}

.search-left {
    width: calc(100% - 60rpx);
    height: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.search-box image {
    width: 36rpx;
    height: 36rpx;
    display: block;
    flex-shrink: 1;
}

.search-box input {
    width: calc(100% - 80rpx);
    text-align: left;
    color:#333333;
    font-size: 28rpx;
    font-weight: 500;
}
.ip{
  color:#cccccc;
  font-size: 28rpx;
}
.home-top {
    width: calc(100% - 80rpx);
    margin: 0px auto;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    font-size: 32rpx;
    color: #666666;
}

.home-btn {
    width: 64rpx;
    margin-left: 20rpx;
    
}

.home-sel {
    width: calc(100% - 80rpx);
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 40rpx auto;
}

.home-span {
    width: 170rpx;
    margin-right: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    color: #666666;
    font-size: 28rpx;
    background-color: #F4F4F4;
    border-radius: 20rpx;
    height: 60rpx;
}

.home-span view{
  white-space: nowrap;
  text-indent: 10rpx;
}

.home-span image {
    display: block;
    flex-shrink: 0;
    width: 14rpx;
    height: 10rpx;
    /* margin-left: 20rpx; */
}

.ticketBox {
    width: 100%;
}

.botTk {
    width: 100%;
    height: 200rpx;
}


.toolbar-class{
  color:#49B642 !important;
  font-size: 32rpx;
}