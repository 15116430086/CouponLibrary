/* pages/receipt/receipt.wxss */
page {
  background-color: #EDEDED;
  padding-top: 140rpx;
}

.top_nav {
  /* border-bottom: 1px solid #e6d9af; */
  width: 100%;
  height: 110rpx;
  background-color: #ffffff;
  padding-left: 40rpx;
  position: fixed;
  top: 0px;
  left: 0px;
  /* border-bottom: 4rpx solid #EDEDED; */
}

.nav-name {
  display: inline-block;
  color: #999999;
  width: auto;
  font-weight: 600;
  height: 102rpx;
  line-height: 102rpx;
  text-align: left;
  font-size: 32rpx;
  margin-right: 54rpx;
}

.nav-hover {
  color: #E85819;
  font-size: 32rpx;
  font-weight: 600;
  border-bottom: 8rpx solid #E85819;
}


.mes-block {
  margin-top: 5rpx;
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.m-class{
  width: calc(100% - 80rpx);
  border-radius: 10rpx;
  background-color: #ffffff;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.m-time{
  width: calc(100% - 80rpx);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
}

.mt-left{
  color: #000000;
  font-size: 32rpx;
  font-weight: 600;
}

.mt-right{
  color: #E85819;
  font-size: 24rpx;
}

.m-box{
  width: calc(100% - 80rpx);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 60rpx;
  color: #000000;
  font-size: 26rpx;
}

.mb-right{
  width: 100rpx;
  text-align: right;
}
.mb-left{
  width: calc(100% - 100rpx);
  text-align: left;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.m-bot{
  width: calc(100% - 80rpx);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 60rpx;
  color: #000000;
  font-size: 26rpx;
  border-top: 1px solid #ededed;
  margin-top: 10rpx;
}