/* pages/sendTicketTwo/sendTicketTwo.wxss */

page {
  background-color: #ededed;
}

.top_nav {
  /* border-bottom: 1px solid #e6d9af; */
  width: 100%;
  height: 110rpx;
  background-color: #fff;
  padding-left: 40rpx;
}

.nav-name {
  display: inline-block;
  color: #999;
  width: 120rpx;
  height: 102rpx;
  line-height: 102rpx;
  text-align: left;
  font-size: 32rpx;
  margin-right: 54rpx;
}

.nav-hover {
  color: #e85819;
  font-size: 32rpx;
  font-weight: 600;
  border-bottom: 8rpx solid #e85819;
}

.mes-block {
  width: 100%;
  height: auto;
}

.mes-top {
  width: 100%;
  background-color: #fff;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  height: auto;
}

.top-mes {
  width: calc(100% - 80rpx);
  margin: 0px auto;
  color: #999;
  font-size: 14px;
  /* text-indent: 40rpx; */
}

.top-mes text {
  color: #d75047;
}

.ticket-box, form {
  margin-top: 20rpx;
  display: block;
  width: 100%;
  height: auto;
  background-color: #ededed;
}

.ticket-block {
  margin: 0px auto;
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  align-items: center;
  justify-content: center;
  height: auto;
  padding-top: 20rpx;
  border-bottom: 1px solid #ededed;
}

.ticket-block input {
  width: calc(100% - 80rpx);
}

.ticket-blocks {
  margin: 0px auto;
  width: 100%;
  height: auto;
  padding-top: 20rpx;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  align-items: center;
  justify-content: center;
  /* border-bottom: 1px solid #EDEDED; */
}

.ticket-name {
  width: calc(100% - 80rpx);
  color: #666;
  font-size: 14px;
  margin-bottom: 10rpx;
}

.textarea {
  width: calc(100% - 80rpx);

  font-size: 28rpx;
  height: 100rpx;
  /* margin: 10%; *//* background-color: lightgray;
    width: 80%; *//* height: 100px; */
}

.placeholder {
  font-size: 28rpx;
  color: gray;
}

.addImg {
  /* margin-top: 20rpx; */
  width: 100%;
  height: 320rpx;
  background-color: #fff;
  padding-top: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.addImg-name {
  color: #000;
  font-size: 16px;
  text-indent: 40rpx;
}

.addImg-box {
  margin-top: 25rpx;
  width: calc(100% - 80rpx);
  display: flex;
  flex-direction: row;
  align-items: center;
}

.addImg-box image {
  width: 180rpx;
  height: 180rpx;
  /* margin-left: 40rpx; */
}

.playBtn {
  width: 670rpx;
  height: 98rpx;
  background: rgba(232, 88, 25, 1);
  text-align: center;
  line-height: 98rpx;
  border-radius: 20rpx;
  margin: 40rpx auto;
  color: #fff;
  font-size: 32rpx;
}

.bot-box {
  width: calc(100% - 80rpx);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.bot-left {
  color: #000;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.bot-box-image {
  width: 22rpx;
  height: 14rpx;
}

.bot-ok {
  width: 38rpx;
  height: 38rpx;
}

.bot-boxs {
  width: calc(100% - 80rpx);
  margin: 0px auto;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.bot-span {
  color: #666;
  font-size: 28rpx;
  margin-left: 40rpx;
}

.bot-left text {
  color: #016fb4;
  font-size: 32rpx;
}
