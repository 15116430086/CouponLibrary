/* pages/storeMes/storeMes.wxss */

@import"/template/TicketBox/TicketBox.wxss";
@import"/template/HotTicket/HotTicket.wxss";
@import"/template/payStore/payStore.wxss";
page {
    margin: 0px;
    height: 0px;
    background-color: #ededed;
}

.home-mes {
    width: 100%;
    height: 156rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #ffffff;
    position: relative;
}

.swiper {
    width: 100%;
    height: 426rpx;
}

.swiper image {
    width: 100%;
    height: 426rpx;
}

.homeg-box {
    position: absolute;
    right: 20rpx;
    width: calc(100% - 40rpx);
    top: -100rpx;
    height: 276rpx;
    border-radius: 10rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 3px 10px rgba(0, 0, 0, 0.16);
    display: flex;
    flex-direction: row;
    align-items: center;
}

.hb-left {
    width: calc(100% - 186rpx);
    height: 100%;
    margin-left: 40rpx;
    display: flex;
    flex-direction: column;
    /* justify-content: space-around; */
}

.hbleft-title {
    margin-top: 34rpx;
    color: #333333;
    font-size: 32rpx;
}

.hbmes-box {
    margin-top: 24rpx;
}

.hbleft-mes {
    margin-bottom: 12rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    color: #666666;
    font-size: 24rpx;
}

.hbleft-mes image {
    width: 24rpx;
    height: 24rpx;
    flex-shrink: 1;
    display: block;
}

.hbleft-mes view {
    margin-left: 16rpx;
}

.hb-right {
    width: 186rpx;
    height: 110rpx;
    text-align: center;
    line-height: 110rpx;
    color: #016fb4;
    font-size: 24rpx;
    border-left: 1px solid rgba(237, 237, 237, 1);
}

.home-groupMes {
    width: calc(100% - 80rpx);
    height: 494rpx;
    color: #666666;
    font-size: 28rpx;
    position: relative;
}

.home-box {
    width: 100%;
    height: auto;
}

.home-groupMask {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    color: #666666;
    font-size: 28rpx;
    position: absolute;
    bottom: 0px;
    left: 0px;
    border-top: 1px solid #ededed;
}

.home-ticket,
.home-store {
    margin-top: 20rpx;
    width: 100%;
    background-color: #ffffff;
}

.home-ticketName {
    text-indent: 20px;
    height: 98rpx;
    color: #000000;
    font-size: 32rpx;
    line-height: 98rpx;
    border-bottom: 1px solid #ededed;
    background-color: #ffffff;
}

.home-tbox {
    width: calc(100% - 80rpx);
    margin: 0px auto;
}

.home-storeName {
    text-indent: 40rpx;
    height: 80rpx;
    color: #000000;
    font-size: 28rpx;
    line-height: 100rpx;
    margin-top: 20rpx;
    background-color: #ffffff;
}