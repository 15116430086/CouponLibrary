/* pages/storeMes/storeMes.wxss */

@import"/template/TicketBox/TicketBox.wxss";
@import"/template/HotTicket/HotTicket.wxss";
@import"/template/payStore/payStore.wxss";
page {
    margin: 0px;
    height: 0px;
    background-color: #ededed;
}

.home-mes {
    width: 100%;
    height: 78px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #ffffff;
    position: relative;
}

.swiper {
    width: 100%;
    height: 426rpx;
}

.swiper image {
    width: 100%;
    height: 426rpx;
}

.homeg-box {
    position: absolute;
    right: 10px;
    width: calc(100% - 20px);
    top: -50px;
    height: 138px;
    border-radius: 5px;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 3px 10px rgba(0, 0, 0, 0.16);
    display: flex;
    flex-direction: row;
    align-items: center;
}

.hb-left {
    width: calc(100% - 93px);
    height: 100%;
    margin-left: 20px;
    display: flex;
    flex-direction: column;
    /* justify-content: space-around; */
}

.hbleft-title {
    margin-top: 17px;
    color: #333333;
    font-size: 16px;
}

.hbmes-box {
    margin-top: 12px;
}

.hbleft-mes {
    margin-bottom: 6px;
    display: flex;
    flex-direction: row;
    align-items: center;
    color: #666666;
    font-size: 12px;
}

.hbleft-mes image {
    width: 12px;
    height: 12px;
    flex-shrink: 1;
    display: block;
}

.hbleft-mes view {
    margin-left: 8px;
}

.hb-right {
    width: 93px;
    height: 55px;
    text-align: center;
    line-height: 55px;
    color: #016fb4;
    font-size: 12px;
    border-left: 1px solid rgba(237, 237, 237, 1);
}

.home-groupMes {
    width: calc(100% - 40px);
    height: 247px;
    color: #666666;
    font-size: 14px;
    position: relative;
}

.home-box {
    width: 100%;
    height: auto;
}

.home-groupMask {
    width: 100%;
    height: 44px;
    line-height: 44px;
    text-align: center;
    color: #666666;
    font-size: 14px;
    position: absolute;
    bottom: 0px;
    left: 0px;
    border-top: 1px solid #ededed;
}

.home-ticket,
.home-store {
    margin-top: 10px;
    width: 100%;
    background-color: #ffffff;
}

.home-ticketName {
    text-indent: 20px;
    height: 49px;
    color: #000000;
    font-size: 16px;
    line-height: 49px;
    border-bottom: 1px solid #ededed;
    background-color: #ffffff;
}

.home-tbox {
    width: calc(100% - 40px);
    margin: 0px auto;
}

.home-storeName {
    text-indent: 20px;
    height: 40px;
    color: #000000;
    font-size: 14px;
    line-height: 50px;
    margin-top: 10px;
    background-color: #ffffff;
}