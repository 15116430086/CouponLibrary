/**index.wxss**/

page {
    background-color: #ededed;
}

ec-canvas {
    width: 100%;
    height: 100%;
    background-color: #FFFFFF;
}

.top-title {
    width: 100%;
    height: 260rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    color: #FFFFFF;
    font-size: 32rpx;
    background-color: #E85819;
    font-weight: 600;
}

.top-title image {
    width: 12rpx;
    height: 22rpx;
    flex-shrink: 0;
    margin-right: 40rpx;
}

.top-left {
    width: 294rpx;
    height: 192rpx;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #FFFFFF;
}

.tl-title {
    color: #333333;
    font-size: 32rpx;
    font-weight: 600;
    margin-bottom: 20rpx;
}

.tl-span {
    color: #F08002;
    font-size: 24rpx;
}

.top-mes {
    width: calc(100% - 80rpx);
    margin: 20rpx auto;
    height: 88rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    color: #000000;
    font-weight: 500;
    font-size: 28rpx;
}

.top-flex {
    width: 336rpx;
    height: 98rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    background-color: #FFFFFF;
    border-radius: 12rpx;
}

.sel {
    background-color: #E85819;
    color: #FFFFFF;
}

.top-mes image {
    flex-shrink: 0;
    width: 40rpx;
    height: 32rpx;
    margin-right: 10rpx;
}

.mid-box {
    width: calc(100% - 80rpx);
    margin: 0px auto;
    height: 88rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.mid-block {
    width: 288rpx;
    height: 72rpx;
    background-color: #FFFFFF;
    border-radius: 12rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.mid-block view {
    width: 180rpx;
    color: #333333;
    font-size: 28rpx;
    white-space: nowrap;
    text-align: center;
}

.mid-block image {
    width: 16rpx;
    height: 12rpx;
    flex-shrink: 0;
    margin-left: 10rpx;
}

.selected {
    background-color: #FF8700;
    color: #FFFFFF;
}

.canvas-box {
    width: calc(100% - 80rpx);
    height: 650rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    margin: 40rpx auto;
}

.c-box {
    width: 0px;
    height: 0px;
}

.mf-box {
    width: 100%;
    margin-top: 20rpx;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.mid-flex {
    flex: 1;
    height: 80rpx;
    background-color: #FFFFFF;
    text-align: center;
    line-height: 80rpx;
    font-size: 28rpx;
}

.selected {
    background-color: #E85819;
    color: #FFFFFF;
    border-radius: 12rpx;
}