/* pages/sendTicketMes/sendTicketMes.wxss */

page {
    background-color: #ededed;
    width: 100%;
    height: 100%;
}

.home-box {
    width: 100%;
    height: auto;
    background-color: #ffffff;
    padding-bottom: 20rpx;
}

.home-sel {
    width: calc(100% - 80rpx);
    height: 120rpx;
    margin: 0px auto;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.home-span {
    width: 32%;
    white-space: nowrap;
    /* margin-right: 20rpx; */
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    color: #666666;
    font-size: 28rpx;
    background-color: #f4f4f4;
    border-radius: 20rpx;
    height: 60rpx;
    position: relative;
}
.home-span view{
  width: calc(100% - 35rpx);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
  position: relative;
  left: -10rpx;

}
.home-span image {
    display: block;
    flex-shrink: 0;
    width: 14rpx;
    height: 10rpx;
    position: absolute;
    right: 10rpx;
    border-radius: 10rpx;
}

.stm-mes {
    color: #333333;
    width: calc(100% - 80rpx);
    text-align: left;
    font-size: 28rpx;
    margin: 20rpx auto;
    font-weight: 600;
}

.stm-block {
    margin-top: 40rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.stm-block image {
    margin-left: 40rpx;
    width: 76rpx;
    height: 76rpx;
    flex-shrink: 0;
    border-radius: 10rpx;
}

.stmb-left {
  width: calc(100% - 160rpx);
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
    height: 76rpx;
}

.stm-top {
  width: 100%;
   overflow:hidden;
text-overflow:ellipsis;
white-space:nowrap;
    color: #333333;
    font-size: 28rpx;
    /* margin-bottom: 10rpx; */
}

.stm-bot {
  width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    color: #666666;
    font-size: 26rpx;
}

.stm-bot view {
    margin-right: 30rpx;
   
}

.stm-nnn{
  width: auto;
  max-width: calc(100% - 260rpx);
  overflow:hidden;
text-overflow:ellipsis;
white-space:nowrap;
}

.stm-time{
  width: auto;
   white-space: nowrap;
}