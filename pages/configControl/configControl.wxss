/* pages/configControl/configControl.wxss */

page {
    background-color: #EDEDED;
}

.home-top {
    width: 100%;
    height: auto;
    background-color: #ffffff;
    margin-bottom: 20rpx;
}

.home-block {
    width: 100%;
    height: 128rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.home-name {
    margin-left: 40rpx;
}

.home-title {
    color: #000000;
    font-size: 32rpx;
    font-weight: 600;
}

.home-rule {
    color: #666666;
    font-size: 28rpx;
}

.home-right {
    margin-right: 40rpx;
}

.home-img {
    width: 10rpx;
    height: 18rpx;
    display: block;
}

.bot-block {
    width: calc(100% - 80rpx);
    height: 128rpx;
    margin: 0px auto;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}