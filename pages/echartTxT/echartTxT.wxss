/**index.wxss**/
page{
  background-color: #ededed;
}
ec-canvas {
  width: 100%;
  height:100%;
  background-color: #FFFFFF;
}


.top-title {
  width: 100%;
  height: 88rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  color: #FFFFFF;
  font-size: 32rpx;
  background-color: #E85819;
  font-weight: 600;
}

.top-title image {
  width: 12rpx;
  height: 22rpx;
  flex-shrink: 0;
  margin-right: 40rpx;
}

.top-left {
  display: block;
  margin-left: 40rpx;
}


.top-mes {
  width: 100%;
  height: 88rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  color: #000000;
  font-size: 32rpx;
  font-weight: 500;
}

.top-mes image {
  flex-shrink: 0;
  width: 14rpx;
  height: 22rpx;
  margin-left: 40rpx;
  margin-right: 20rpx;
}

.mid-box {
  width: calc(100% - 80rpx);
  margin: 0px auto;
  height: 88rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.mid-block {
  width: 288rpx;
  height: 72rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.mid-block view {
  width: 180rpx;
  color: #333333;
  font-size: 28rpx;
  white-space: nowrap;
  text-align: center;
}

.mid-block image {
  width: 16rpx;
  height: 12rpx;
  flex-shrink: 0;
  margin-left: 10rpx;
}

.mid-flex {
  width: 170rpx;
  height: 72rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  text-align: center;
  line-height: 72rpx;
  font-size: 28rpx;
}

.selected {
  background-color: #E85819;
  color: #FFFFFF;
}

.canvas-box {
  width: calc(100% - 80rpx);
  height: 650rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  margin: 40rpx auto;
}

.c-box{
  width: 0px;
  height: 0px;
}