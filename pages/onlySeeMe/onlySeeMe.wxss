page {
    background-color: #EDEDED;
}

.v-top {
    width: 100%;
    height: auto;
    background-color: #FFF;
    padding-bottom: 20rpx;
}

.home-top {
    width: calc(100% - 80rpx);
    background-color: #ffffff;
    margin: 0px auto;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    font-size: 32rpx;
    color: #666666;
}

.home-btn {
    width: 60rpx;
    margin-left: 20rpx;
    white-space: nowrap;
    font-size: 28rpx;
    color: #666666;
}

.v-box {
    /* margin-top: 20rpx; */
    width: 100%;
    height: auto;
    background-color: #FFF;
    /* padding-bottom: 20rpx; */
}

.v-block {
    width: calc(100% - 80rpx);
    margin: 0px auto;
    height: 200rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.v-left {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.v-left image {
    width: 128rpx;
    height: 128rpx;
    border-radius: 10rpx;
    margin-right: 40rpx;
}

.v-mid {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
    height: 128rpx;
}

.v-t {
    color: #000000;
    font-size: 30rpx;
    font-weight: 600;
}

.v-b {
    color: #666666;
    font-size: 26rpx;
}

.v-p {
    color: #E85819;
    font-size: 24rpx;
}

.v-btn {
    width: 670rpx;
    height: 98rpx;
    line-height: 98rpx;
    text-align: center;
    color: #FFF;
    font-size: 32rpx;
    margin: 40rpx auto;
    background: #E85819;
    border-radius: 20rpx;
}

.home-sel {
    width: calc(100% - 80rpx);
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 40rpx auto;
}

.h-right {
    width: 186rpx;
    height: 60rpx;
    background: rgba(255, 240, 222, 1);
    border: 2rpx solid rgba(232, 88, 25, 1);
    border-radius: 30rpx;
    text-align: center;
    line-height: 60rpx;
    color: #E85819;
    font-size: 24rpx;
}

.home-span {
    width: 216rpx;
    margin-right: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    color: #666666;
    font-size: 28rpx;
    background-color: #F4F4F4;
    border-radius: 20rpx;
    height: 60rpx;
}

.home-span image {
    display: block;
    flex-shrink: 1;
    width: 14rpx;
    height: 10rpx;
    margin-left: 20rpx;
}

.top_nav {
    /* border-bottom: 1px solid #e6d9af; */
    width: 100%;
    height: 110rpx;
    background-color: #ffffff;
    padding-left: 40rpx;
    border-bottom: 4rpx solid #EDEDED;
}

.nav-name {
    display: inline-block;
    color: #333333;
    width: auto;
    font-weight: 600;
    height: 102rpx;
    line-height: 102rpx;
    text-align: left;
    font-size: 28rpx;
    margin-right: 54rpx;
}

.nav-hover {
    color: #E85819;
    font-size: 32rpx;
    font-weight: 600;
    border-bottom: 8rpx solid #E85819;
}