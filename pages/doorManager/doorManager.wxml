<!-- hidden="{{Popup}}"   这个加判断-->
<view class="mask" hidden="{{Popup}}"   bindtap="coles">
    <view class="vm-mask"  catchtap="nocoles" >
        <view class="vmask-title">修改店铺</view>
      

        <view class="vm-mid">
            <image src="/static/images/bianxie1.png" />
            <input type="text" placeholder="请输入店铺名称" value="{{datalist[0].ShopName}}" bindblur="blurs" placeholder-class="pm-class" />
        </view>
         <view class="vm-mid">
            <image src="/static/images/shop1.png" />
            <input type="text" placeholder="请输入店铺地址" disabled="true" value="{{datalist[0].ShopAddress}}" bindblur="blurs" placeholder-class="pm-class" class="inputOne"/>
            <view class="blue" bindtap="addressblurs">
              <image src="/static/images/address1.png" style="width:45rpx;height:45rpx;"></image>
            </view>
        </view>
        <view class="vm-mid">
            <image src="/static/images/txl1.png" />
            <input type="number" placeholder="请输入店铺联系人" value="{{datalist[0].Contacts}}" bindblur="blurs" placeholder-class="pm-class"/>
        </view>
       <view class="vm-mid">
            <image src="/static/images/phone1.png" />
            <input type="number" placeholder="请输入联系方式" value="{{datalist[0].Telephone}}" bindblur="blurs" placeholder-class="pm-class"/>
        </view>
        
        <view class="vm-bot" bindtap="shopUpdate">确认修改</view>
    </view>
</view>