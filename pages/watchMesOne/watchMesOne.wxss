/* pages/watchMesOne/watchMesOne.wxss */

page {
    background-color: #ededed;
    width: 100%;
    height: 100%;
}

.home-box {
    width: 100%;
    height: auto;
    background-color: #ffffff;
    /* padding-bottom: 20rpx; */
}


.stm-block {
    /* margin-top: 40rpx; */
    width: 100%;
    height: 128rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    /* justify-content: center; */
}

.stm-block image {
    margin-left: 40rpx;
    width: 76rpx;
    height: 76rpx;
    flex-shrink: 1;
    border-radius: 10rpx;
}

.stmb-left {
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
    height: 76rpx;
}

.stm-top {
    color: #333333;
    font-size: 28rpx;
    font-weight: 600;
    margin-bottom: 10rpx
}

.stm-bot {
    display: flex;
    flex-direction: row;
    align-items: center;
    color: #666666;
    font-size: 26rpx;
}

.stm-bot view {
    margin-right: 30rpx;
}