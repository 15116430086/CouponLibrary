/* pages/watchMesOne/watchMesOne.wxss */

page {
    background-color: #ededed;
    width: 100%;
    height: 100%;
}

.home-box {
    width: 100%;
    height: auto;
    background-color: #ffffff;
    /* padding-bottom: 20rpx; */
}


.stm-block {
    /* margin-top: 40rpx; */
    width: 100%;
    height: 160rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    /* justify-content: center; */
}

.stm-block image {
    margin-left: 40rpx;
    width: 112rpx;
    height: 112rpx;
    flex-shrink: 0;
    border-radius: 10rpx;
}

.stmb-left {
    width: calc(100% - 192rpx);
    margin-left: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
    height: auto;
}

.stm-top {
  width: 100%;
    color: #333333;
    font-size: 28rpx;
    font-weight: 600;
    /* margin-bottom: 10rpx; */
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.stm-bot {
  width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    color: #666666;
    font-size: 26rpx;
}

.stm-bot view {
    margin-right: 30rpx;
}