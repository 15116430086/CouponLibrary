/* pages/chooseBuyGoods/chooseBuyGoods.wxss */

page {
    background-color: #EDEDED;
}

.v-top {
    width: 100%;
    height: auto;
    background-color: #FFF;
    padding-bottom: 20rpx;
}

.home-top {
    width: calc(100% - 80rpx);
    background-color: #ffffff;
    margin: 0px auto;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    font-size: 32rpx;
    color: #666666;
}

.search-box {
    width: 254rpx;
    height: 60rpx;
    background: rgba(239, 239, 239, 1);
    border-radius: 20rpx;
    font-size: 24rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    font-weight: 500;
    line-height: 60rpx;
    color: #cccccc;
}

.search-left {
    width: calc(100% - 47rpx);
    height: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.search-box image {
    width: 32rpx;
    height: 32rpx;
    display: block;
    flex-shrink: 1;
}

.search-box input {
    width: calc(100% - 36rpx);
    text-align: left;
    color: #333;
    font-size: 26rpx;
}

.ip {
    color: #CCC;
    font-size: 26rpx;
}

.home-btn {
    width: 60rpx;
    margin-left: 20rpx;
    white-space: nowrap;
    font-size: 28rpx;
    color: #666666;
}

.v-box {
    /* margin-top: 20rpx; */
    width: 100%;
    height: auto;
    background-color: #FFF;
    /* padding-bottom: 20rpx; */
}

.v-block {
    width: calc(100% - 80rpx);
    margin: 0px auto;
    height: 176rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.v-left {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.v-left image {
    width: 128rpx;
    height: 128rpx;
    border-radius: 10rpx;
    margin-right: 40rpx;
}

.v-mid {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
    height: 76rpx;
}

.v-t {
    color: #000000;
    font-size: 28rpx;
    font-weight: 600;
}

.v-b {
    color: #666666;
    font-size: 26rpx;
}

.v-btn {
    width: 670rpx;
    height: 98rpx;
    line-height: 98rpx;
    text-align: center;
    color: #FFF;
    font-size: 32rpx;
    margin: 40rpx auto;
    background: #333333;
    border-radius: 50rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.home-sel {
    width: calc(100% - 80rpx);
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 40rpx auto;
}

.home-span {
    width: 170rpx;
    margin-right: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    color: #666666;
    font-size: 28rpx;
    background-color: #F4F4F4;
    border-radius: 20rpx;
    height: 60rpx;
}

.home-span image {
    display: block;
    flex-shrink: 1;
    width: 14rpx;
    height: 10rpx;
    margin-left: 20rpx;
}

.vb-right {
    width: 264rpx;
    text-align: center;
    color: #E85819;
}

.vb-left {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    height: 100%;
    border-right: 1px solid #FFF;
    width: 406rpx;
}

.vb-left image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 15rpx;
}

.vb-txt text {
    color: #E85819
}