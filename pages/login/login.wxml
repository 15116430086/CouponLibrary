<!--pages/login/login.wxml-->
<view class="v-box">
    
        <image src="/static/images/logo.png" class="logo"/>
        <view class="v-topTitle">欢迎进入券库</view>
        <view class="v-topMes">券库是服务于商家的异业资源整合平台，帮助商家拓展销售渠道，整合会员权益，提升客户终身价值。</view>
        <button class="loginBtn" open-type="getUserInfo" bindgetuserinfo="onMerchantRegTap" >立即注册</button>
        <button class="phoneBtn" style="margin-bottom:40rpx;border:none" bindtap="onPhoneLoginTap" >登录已有账号</button>

        <view class="v-bot">
            <block wx:for="{{itemImage}}" wx:key="*this">
            <view class="v-class">
                <image src="{{item.image}}" />
                <view class="v-title" style="font-weight:500">{{item.title}}</view>
                <view class="v-title">{{item.span}}</view>
            </view>
            </block>
        </view>
</view>
