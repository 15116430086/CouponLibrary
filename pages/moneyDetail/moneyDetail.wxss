/* pages/moneyDetail/moneyDetail.wxss */

page {
    background-color: #EDEDED;
    width: 100%;
    height: auto;
}

.m-top {
    width: 100%;
    background-color: #ffffff;
    height: auto;
    padding-bottom: 40rpx;
}

.mD-top {
    width: 100%;
    height: 260rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.mD-top image {
    width: 76rpx;
    height: 76rpx;
    border-radius: 10rpx;
}

.mDt-name {
    color: #999999;
    font-size: 24rpx;
    margin-top: 20rpx;
}

.mDt-price {
    margin-top: 20rpx;
    color: #333333;
    font-size: 44rpx;
    font-weight: 600;
}

.mD-bot {
    margin-top: 40rpx;
    width: 100%;
    height: auto;
}

.mDb-block {
    width: 100%;
    height: 40rpx;
    color: #666;
    font-size: 28rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    margin-bottom: 16rpx;
}

.mD-title {
    margin-left: 40rpx;
    margin-right: 80rpx;
}

.m-Mid {
    width: 100%;
    height: auto;
    background-color: #ffffff;
    margin-top: 20rpx;
}

.top_nav {
    /* border-bottom: 1px solid #e6d9af; */
    width: 100%;
    height: 108rpx;
    background-color: #ffffff;
    padding-left: 40rpx;
}

.nav-name {
    display: inline-block;
    color: #999999;
    width: auto;
    height: 102rpx;
    line-height: 102rpx;
    text-align: left;
    font-size: 32rpx;
    margin-right: 54rpx;
    white-space: nowrap;
}

.nav-hover {
    color: #000000;
    font-size: 32rpx;
    border-bottom: 4rpx solid #000000;
}

.mes-block {
    width: 100%;
    height: auto;
}

.m-mesBlock {
    width: 100%;
    height: 128rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.mbb-left {
    display: flex;
    align-items: flex-start;
    flex-direction: column;
    font-size: 28rpx;
    margin-left: 40rpx;
}

.mbot-name {
    color: #333333;
    margin-bottom: 5rpx;
}

.mbot-bot {
    color: #666666;
}

.mbot-bot text {
    color: #999999;
    font-size: 24rpx;
    margin-right: 20rpx;
}

.m-right {
    font-size: 26rpx;
    color: #999999;
    margin-right: 40rpx;
}