/* pages/writeNote/writeNote.wxss */

page {
    background-color: #ededed;
}

.v-block {
    width: 100%;
    background-color: #FFFFFF;
    height: 128rpx;
    line-height: 128rpx;
    text-align: center;
    color: #000000;
    font-size: 32rpx;
    font-weight: 600;
    text-indent: 40rpx;
    text-align: left;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.05);
}

.v-all,
form {
    width: 100%;
    background-color: #FFFFFF;
    display: block;
    position: relative;
    /* display: flex;
    flex-direction: column;
    align-items: center; */
}

.v-box {
    margin: 0px auto;
    width: calc(100% - 80rpx);
    height: 184rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
    border-bottom: 1px solid #EFEFEF;
}

.v-title {
    width: 100%;
    text-align: left;
    color: #666666;
    font-size: 28rpx;
    margin-bottom: 20rpx;
}

.v-input {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-bottom: 10rpx;
}

.v-input input {
    width: calc(100% - 40rpx);
}

.v-input image {
    width: 32rpx;
    height: 32rpx;
}

.ip {
    color: #CCCCCC;
    font-size: 32rpx;
}

.v-btn {
    width: calc(100% - 80rpx);
    height: 98rpx;
    line-height: 98rpx;
    color: #FFFFFF;
    background-color: #E85819;
    border-radius: 20rpx;
    text-align: center;
    font-size: 32rpx;
    position: absolute;
    left: 40rpx;
    bottom: -180rpx;
}

.toolbar-class {
    color: #45ADEC;
    font-weight: 600;
}