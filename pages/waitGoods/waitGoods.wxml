<!-- pages/waitGoods/waitGoods.wxml -->
<wxs module="common" src="../../utils/common.wxs"></wxs>
<view class="v-box">
    <view class="v-top">
        <view class="v-title">待发货</view>
        <navigator url="../businessAccept/businessAccept?type={{type}}&orderid={{orderid}}&orderstate={{orderstate}}">
        <view class="v-btn" wx:if="{{orderstate==2}}">填写货单</view>
        <view class="v-btn" wx:if="{{orderstate==3 || orderstate==4}}">查看货单</view>
        </navigator>
    </view>
    <view class="v-mid">
        <view class="v-name">收货人</view>
        <view class="v-mes">{{Addressee}}</view>
    </view>
    <view class="v-mid">
        <view class="v-name">收货人地址</view>
        <view class="v-mes">{{AddressInfo}}</view>
    </view>
    <view class="v-mid" style="border:none">
        <view class="v-name">联系电话</view>
        <view class="v-mes">{{Telephone}}</view>
    </view>
</view>
<view class="v-bot">
    <view class="v-span">
        <view class="v-text">收款总额</view>
        <view>￥{{TruePayMoney}} ({{CouponName}}￥{{CouponMoney}})</view>
    </view>
    <view class="v-span">
        <view class="v-text">商品总价</view>
        <view>￥{{ReceivableMoney}}</view>
    </view>
    <view class="v-span">
        <view class="v-text">运费</view>
        <view>￥{{Postage}}</view>
    </view>
    <view class="v-span">
        <view class="v-text">购买总数</view>
        <view>{{Number}}</view>
    </view>
    <view class="v-span">
        <view class="v-text">订单号</view>
        <view>{{WriteOffOrderID}}</view>
    </view>
    <view class="v-span">
        <view class="v-text">创建时间</view>
        
        <view>{{common.sysFormatDate(CreateTime,"yyyy-MM-dd hh:mm:ss",true)}}</view>
    </view>
    <view class="v-block">
        <image src="/static/images/swp.png" />
        <view class="v-left">
            <view class="v-card-one">
                <view class="v-bq" style="text-align:left;">{{ProductName}}</view>
                <view class="v-bb" style="text-align:left">{{GroupName}}</view>
            </view>
            <view class="v-card">
                <view class="v-bc" style="text-align:right">￥{{SalePrice}}</view>
                <view class="v-bd" style="text-align:right">X1</view>
            </view>
        </view>
    </view>
</view>