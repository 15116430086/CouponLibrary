<!-- pages/myMoney/myMoney.wxml -->
<wxs module="common" src="../../utils/common.wxs"></wxs>
<view class="v-box">
    <view class="v-block">
        <view class="v-top">
            <view class="v-title">待结算资金:</view>
            <view class="v-cash">
                <text>￥</text>
                {{sumBalanceMoney}}
            </view>
        </view>
        <view class="v-mid">佣金退还¥{{sumDrawbackMoney}} | 佣金收入¥{{sumCommissionMoney}} | 代收资金¥{{sumCollectionMoney}}</view>
        <view class="v-bot">
            <view class="v-btn" bindtap="startSettlement">开始结算</view>
            <navigator url="../banlanceMes/banlanceMes">
                <view class="v-btn">结算明细</view>
            </navigator>
        </view>
    </view>
</view>
<view class="v-all">

  <block wx:for="{{Capitaldetailslist}}" wx:for-index="index" wx:key="CapitalItemID">
      <view class="m-block">
          <view class="m-left">
              <image src="{{item.ImageOne==''?'/static/images/swp.png':item.ImageOne}}" />
              <view class="m-mid">
                  <view class="m-title">{{item.ItemName}}</view>
                  <view class="m-mes">
                      <view class="m-time">{{common.sysFormatDate(item.CreateTime,"yyyy-MM-dd hh:mm:ss",true)}}</view>
                      <view class="m-span" wx:if="{{item.CapitalType==1}}" style="color:#016FB4;border:1px solid #016FB4">佣</view>
                      <view class="m-span" wx:if="{{item.CapitalType==0}}" style="color:#E30000">退</view>
                      <view class="m-span" wx:if="{{item.CapitalType==2}}" style="color:#429859">券</view>
                  </view>
              </view>
          </view>
          <view class="m-right">
              <view class="m-num">+{{item.IncomeMoney}}</view>
              <!--<view class="m-txt">券抵用￥100</view>-->
          </view>
      </view>
  </block>

</view>