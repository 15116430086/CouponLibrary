<!-- pages/management/management.wxml -->
<view class="m-allbox">
    <view class="m-mid">
        <view>取消</view>
        <view style="color:#E85819">完成(2)</view>
    </view>
    <view class="m-bot">
        <view class="v-box">
            <view class="v-left">
                <image src="/static/images/yj.png" class="v-left-arr" />
                <view>我的会员</view>
            </view>
            <view class="v-right">28人</view>
        </view>
        <view class="v-block">
            <view class="b-box">
                <view class="v-left">
                    <image src="/static/images/f2.png" class="v-choose" />
                    <view class="b-left">
                        <image src="/static/images/swp.png" mode="aspectFill" class="b-left-img" />
                        <view class="b-mes">
                            <view class="b-name">噢噢啊搜傲视OAOS撒是傲视噢噢啊搜傲视OAOS撒是傲视</view>
                            <view class="b-block">未设置标签</view>
                        </view>
                    </view>
                </view>
                <image src="/static/images/right-arr1.png" class="mbot-arr" />
            </view>
            <view class="b-box">
                <view class="v-left">
                    <image src="/static/images/f2.png" class="v-choose" />
                    <view class="b-left">
                        <image src="/static/images/swp.png" mode="aspectFill" class="b-left-img" />
                        <view class="b-mes">
                            <view class="b-name">噢噢啊搜傲视OAOS撒是傲视噢噢啊搜傲视OAOS撒是傲视</view>
                            <view class="b-span">
                                <view class="v-text">潜在客户</view>
                                <view class="v-text">一周多次消费</view>
                                <view class="v-show">等5个标签</view>
                                <image src="/static/images/xj.png" class="v-left-arr" style="margin-left:5rpx" />
                            </view>
                        </view>
                    </view>
                </view>
                <image src="/static/images/right-arr1.png" class="mbot-arr" />
            </view>
        </view>
    </view>
</view>
<van-popup show="{{ show }}" round position="bottom" bind:close="onClose">
    <view class="s-view">
        <view class="s-left">
            <view class="s-title">设置标签</view>
            <view class="s-mes">(最多选择6个标签)</view>
        </view>
        <view class="s-right">确认</view>
    </view>
    <view class="s-box">
        <view class="s-ac">一周多次消费</view>
        <view class="s-span">一周多次消费</view>
        <view class="s-span">一周多次消费</view>
        <view class="s-span">一周多次消费</view>
    </view>
    <view class="s-bot">
        <view class="s-add">
            <view class="s-jia">+</view>
            <input maxlength="6" type="text" placeholder="新建标签" placeholder-class="ip" />
        </view>
        <view class="s-btn">确认添加</view>
    </view>
</van-popup>
<van-popup show="{{ showLevel }}" round position="bottom" bind:close="onClose">
    <view class="s-view">
        <view class="s-left">
            <view class="s-title">设置会员等级</view>
        </view>
        <view class="s-right">完成</view>
    </view>
    <view class="s-box">
        <view class="s-block-ac">
            <view>钻石会员</view>
            <view class="s-lit">会员当前等级</view>
        </view>
        <view class="s-block">钻石会员</view>
        <view class="s-block">钻石会员</view>
    </view>
</van-popup>