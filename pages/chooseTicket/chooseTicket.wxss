/* pages/chooseTicket/chooseTicket.wxss */

@import "/template/ScrollView/ScrollView.wxss";
@import "/template/HotTicket/HotTicket.wxss";
@import "/template/ShopMes/ShopMes.wxss";
@import "/template/BotOne/BotOne.wxss";
::-webkit-scrollbar {
    width: 0px;
    height: 0;
    color: transparent;
}

page {
    width: 100%;
    height: 100%;
    background-color: #ededed;
}

.home-box {
    width: 100%;
    height: auto;
    background-color: #efefef;
    font-family: PingFang SC;
    padding-bottom: 110rpx;
}

.hb-box{
    width: 100%;
    position: fixed;
    top: 0px;
    left: 0px;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
    z-index: 100;
}

.home-top {
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    background-color: #fff;
}

.h-name {
    white-space: nowrap;
}

.homeTop-name image {
    display: block;
    width: 20rpx;
    height: 14rpx;
    flex-shrink: 0;
    margin-left: 10rpx;
}

.homeTop-name {
    width: 100rpx;
    height: 60rpx;
    font-size: 28rpx;
    font-weight: 600;
    color: #666;
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-left: 30rpx;
}

.search-box {
    width: 316rpx;
    height: 60rpx;
    background: rgba(239, 239, 239, 1);
    border-radius: 20rpx;
    font-size: 28rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    font-weight: 500;
    line-height: 34rpx;
    color: #ccc;
    margin-left: 20rpx;
}

.search-box image {
  margin-left: 35rpx;
    width: 36rpx;
    height: 36rpx;
    margin-right: 24rpx;
    position: relative;
}

.mes-box {
    width: 184rpx;
    height: 60rpx;
    background: rgba(255, 240, 222, 1);
    border: 1px solid rgba(232, 88, 25, 1);
    color: #e85819;
    border-radius: 32rpx;
    text-align: center;
    line-height: 60rpx;
    font-size: 28rpx;
    /* font-weight: 600; */
    margin-right: 40rpx;
}

.swiper {
    margin-top: 100rpx;
    width: 100%;
    height: 440rpx;
}

.swipernull {
    margin-top: 175rpx;
    width: 100%;
    
}

.swiper image {
    height: 100%;
    width: 100%;
}

.near-shop {
    width: 100%;
    height: auto;
    margin-bottom: 20rpx;
    /* background-color: #fff; */
}

.ns-title {
    width: 100%;
    background-color: #fff;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.ns-title view {
    margin-left: 40rpx;
    font-size: 32rpx;
    font-weight: 600;
    color: rgba(51, 51, 51, 1);
}

.ns-title-div {
    margin-right: 40rpx;
    font-size: 24rpx;
    font-weight: 600;
    color: rgba(1, 111, 180, 1);
    display: flex;
    flex-direction: row;
    align-items: center;
}

.ns-title-div image {
    display: block;
    flex-shrink: 0;
    width: 14rpx;
    height: 24rpx;
    margin-left: 10rpx;
}

.ns-scroll {
    width: 100%;
    height: auto;
}


.cb-box,
.cb-box1 {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 32rpx;
    white-space: nowrap;
    /* font-weight: 600; */
}

 

.cb-box {
    color: #e85819;
    /* margin-left: 78px; */
}

.cb-box1 {
    color: #999;
    /* margin-right: 78px; */
}



.choose-bot {
    width: 100%;
    height: 98rpx;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    position: fixed;
    bottom: 0px;
    left: 0px;
    box-shadow: 3px 0px 8px rgba(0, 0, 0, 0.16);
}

.top_nav1 {
    border-bottom: 1px solid #e6d9af;
    width: calc(100% - 80rpx);
    margin: 0px auto;
    height: 80rpx;
    background-color: #fff;
    /* padding-left: 40rpx; */
    border-bottom: 2rpx solid #ededed;
   margin-bottom: 10rpx;
    z-index: 100;
    box-sizing: border-box;
    display: flex;
    white-space: nowrap;
    /*这个属性很重要*/
    align-items: center;
    justify-content: center;
  }

  .nav-name {
    display: inline-block;
    color: #999;
    width: auto;
    font-weight: 600;
    height: 90rpx;
    line-height: 90rpx;
    text-align: left;
    font-size: 28rpx;
    margin-right: 54rpx;
  }

  .nav-hover {
    color: #e85819;
    font-size: 30rpx;
    font-weight: 600;
    border-bottom: 8rpx solid #e85819;
  }