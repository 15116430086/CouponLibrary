/* pages/merchantReg/merchantReg.wxss */

/* pages/sendTicketTwo/sendTicketTwo.wxss */

page {
  width: 100%;
  background-color: #ededed;
  height: auto;
  padding-bottom: 128rpx;
}

.top-block {
  width: 100%;
  height: auto;
  display: block;
  position: fixed;
  top: 0px;
  left: 0px;
  z-index: 100;
}

.top_nav {
  /* border-bottom: 1px solid #e6d9af; */
  width: 100%;
  height: 110rpx;
  background-color: #fff;
  padding-left: 40rpx;
}

.nav-name {
  display: inline-block;
  color: #999;
  width: auto;
  height: 102rpx;
  line-height: 102rpx;
  text-align: left;
  font-size: 32rpx;
  margin-right: 54rpx;
}

.ticket-block input {
  width: 100%;
  font-size: 32rpx;
  font-weight: 600;
  font-family: PingFang SC;
}

.ticket-block  textarea{
  width: 100%;
  font-size: 32rpx;
  font-weight: 600;
  font-family: PingFang SC;
  color: #000;
  text-indent: 0px;
  padding: 0px;
  margin: 0px;
}

.iostextarea{
  position: relative;
  left: -10rpx;
  padding: 0px
}
.ip {
  color: #ccc;
  font-size: 28rpx;
  font-weight: 500;
}

.picker {
  width: 100%;
  text-align: left;
  color: #000;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.nav-hover {
  color: #e85819;
  font-size: 32rpx;
  font-weight: 600;
  border-bottom: 8rpx solid #e85819;
}

.mes-block {
  width: 100%;
  height: auto;
}

.mes-top {
  width: 100%;
  background-color: #fff;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  height: auto;
}

.top-mes {
  width: calc(100% - 80rpx);
  margin: 0px auto;
  color: #999;
  font-size: 14px;
  /* text-indent: 40rpx; */
}

.top-mes text {
  color: #d75047;
}

.ticket-box {
  margin-top: 20rpx;
  width: 100%;
  height: auto;
  background-color: #fff;
}

.ticket-block {
  margin: 0px auto;
  width: calc(100% - 80rpx);
  height: 120rpx;
  padding-top: 20rpx;
  border-bottom: 1px solid #ededed;
}

.ticket-blocks {
  margin: 0px auto;
  width: calc(100% - 80rpx);
  height: auto;
  padding-top: 20rpx;
  border-bottom: 1px solid #ededed;
}

.ticket-name {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 10rpx;
  margin-top: 20rpx;
  text-align: left;
}

.t-bot {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.t-down {
  color: #000;
  font-size: 32rpx;
  font-weight: 600;
}

.seeMes {
  color: #016fb4;
  font-size: 32rpx;
  font-weight: 600;
}

.t-bot image {
  width: 42rpx;
  height: 34rpx;
  flex-shrink: 0;
}

.addImg {
  margin-top: 20rpx;
  width: 100%;
  height: 320rpx;
  background-color: #fff;
  padding-top: 10rpx;
}

.addImg-name {
  color: #000;
  font-size: 16px;
  text-indent: 40rpx;
}

.addImg-box {
  margin-top: 25rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.addImg-box image {
  width: 180rpx;
  height: 180rpx;
  margin-left: 40rpx;
}

.playBtn {
  width: 670rpx;
  height: 98rpx;
  background: rgba(232, 88, 25, 1);
  text-align: center;
  line-height: 98rpx;
  border-radius: 20rpx;
  margin: 40rpx auto;
  color: #fff;
  font-size: 32rpx;
}

form {
  display: block;
  width: 100%;
  height: auto;
  margin-top: 246rpx;
}

.bm-bot {
  width: calc(100% - 70rpx);
  height: 140rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #999;
  display: flex;
  flex-grow: row;
  align-items: center;
}

.bm-bot navigator {
  color: #016fb4;
  /* margin-left: 10rpx; */
  white-space: nowrap;
}
.bm-bot view{
  width: calc(100% - 70rpx);
  display: flex;
  flex-grow: row;
  align-items: center;
}
.v-check {
  width: 100%;
  height: auto;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.bm-bot image {
  width: 38rpx;
  height: 38rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}


.bm-view view,.bm-view navigator{
  display: block;
  white-space: nowrap;
}