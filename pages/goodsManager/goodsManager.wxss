/* pages/goodsManager/goodsManager.wxss */
.top_nav {
    /* border-bottom: 1px solid #e6d9af; */
    width: 100%;
    height: 110rpx;
    background-color: #ffffff;
    padding-left: 40rpx;
    border-bottom: 4rpx solid #EDEDED;
}
page{
  background-color: #EDEDED;
}
.nav-name {
    display: inline-block;
    color: #999999;
    width: auto;
    font-weight: 600;
    height: 102rpx;
    line-height: 102rpx;
    text-align: left;
    font-size: 28rpx;
    margin-right: 54rpx;
    position: relative;
}

.nav-hover {
    color: #E85819;
    font-size: 32rpx;
    font-weight: 600;
    border-bottom: 8rpx solid #E85819;
}

.top-btn{
  width:156rpx;
height:60rpx;
line-height: 60rpx;
text-align: center;
color:#E85819;
font-size: 28rpx;
background:rgba(255,240,222,1);
border:1px solid rgba(232,88,25,1);
position: absolute;
right: 20rpx;
top: 20rpx;
border-radius: 30rpx;
}
.v-box{
  width: 100%;
  height: auto;
  margin-bottom: 10rpx;
  background-color: #FFF;
}
.v-block{
  width: calc(100% - 80rpx);
  height: 200rpx;
  margin: 0px auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #EDEDED;
}

.v-left{
  width: auto;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.v-left image{
  width: 128rpx;
  height: 128rpx;
  border-radius: 10rpx;
  margin-right: 40rpx;
}

.v-mid{
  width: 280rpx;
  text-align: left;
}

.v-title{
  width: 100%;
  color:#333333;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.v-mes{
  width: 100%;
  color:#666666;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between
}

.v-right{
  color:#E85819;
  font-size: 32rpx;
  position: relative;
  top: -25rpx;
}
.v-bot{
  width: calc(100% - 80rpx);
  height: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: 0px auto;
}


.v-span{
  color:#EDEDED;
  font-size: 24rpx;
}

.v-set{
  width: 208rpx;
  color:#016FB4;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}