/* pages/wuliuMes/wuliuMes.wxss */

page {
    background-color: #ededed;
}

.v-box {
    width: calc(100% - 40rpx);
    height: auto;
    margin: 20rpx auto;
    background-color: #FFFFFF;
    border-radius: 20rpx;
    color: #999999;
    font-size: 24rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}

.v-block {
    width: calc(100% - 20rpx);
    /* min-height: 100px; */
    display: flex;
    flex-direction: row;
    align-items: flex-start;
}

.v-left {
    width: 160rpx;
    position: relative;
    padding-top: 20rpx;
    /* border-right: 1px solid #ccc; */
}

.v-time {
    width: 150rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}

.v-line {
    width: 15rpx;
    height: 15rpx;
    background-color: #FFFFFF;
    border-radius: 50%;
    position: absolute;
    right: -8.5rpx;
    z-index: 10;
    top: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.v-line view {
    width: 8rpx;
    height: 8rpx;
    background-color: #CCCCCC;
    border-radius: 50%;
}

.v-right {
    width: calc(100% - 120rpx);
    height: 100%;
    padding-left: 20rpx;
    border-left: 1px solid #CCCCCC;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}

.vbox{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.vbox image{
  margin-top: 300rpx;
  width: 230rpx;
  height: 130rpx;
  flex-shrink: 0;
  margin-bottom: 20rpx;
}
.vbox view{
  width: 70%;
  text-align: center;
  color:#999999;
  font-size: 28rpx;
}