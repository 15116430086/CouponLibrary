page {
  background-color: #ededed;
}

.v-box {
  width: 100%;
  height: auto;
  background-color: #fff;
  padding-bottom: 128rpx;
}

.v-top {
  width: calc(100% - 80rpx);
  margin: 0px auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
}

.v-block {
  width: 100%;
  height: 100%;
  border-bottom: 1px solid #ededed;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.v-top image {
  width: 30rpx;
  height: 20rpx;
}

.v-title {
  color: #000;
  font-size: 32rpx;
  margin-right: 20rpx;
  font-weight: 600;
}

.v-mes {
  color: #666;
  font-size: 28rpx;
}

.v-bot {
  width: 100%;
  height: auto;
  background-color: #ededed;
}

.v-span {
  width: calc(100% - 80rpx);
  height: 100rpx;
  margin: 0px auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.v-span image {
  width: 30rpx;
  height: 20rpx;
}

.v-name {
  color: #333;
  font-size: 28rpx;
  margin-left: 40rpx;
}

.v-btn {
  width: 670rpx;
  height: 98rpx;
  background: rgba(232, 88, 25, 1);
  border-radius: 20rpx;
  font-size: 32rpx;
  text-align: center;
  line-height: 98rpx;
  color: #fff;
  margin: 20rpx auto;
}

