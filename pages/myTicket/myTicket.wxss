/* pages/myTicket/myTicket.wxss */

@import"/template/BotOne/BotOne.wxss";
.home-top {
    width: 100%;
    height: 284rpx;
    background: rgba(255, 112, 49, 1);
    color: #ffffff;
}

.home-name {
    text-align: center;
    height: 22px;
    line-height: 22px;
}

.homeTop-mid {
    width: calc(100% - 96px);
    margin: 10px auto;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.htm-div,
.htm-btn {
    width: 126px;
    height: 40px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    font-size: 14px;
}

.htm-div image {
    display: block;
    flex-shrink: 1;
    width: 24px;
    height: 24px;
    margin-right: 10px;
}

.htm-btn {
    background: rgba(255, 240, 222, 1);
    border-radius: 20px;
    color: #e85819;
    text-align: center;
    line-height: 40px;
}

.home-mid {
    width: 100%;
    height: auto;
}

.home-card {
    width: calc(100% - 40px);
    margin: 10px auto;
    height: auto;
    box-shadow: 0px 3px 10px rgba(0, 0, 0, 0.16);
    border-radius: 10px;
}

.home-one {
    width: calc(100% - 40px);
    margin: 0px auto;
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 14px;
    justify-content: space-between;
}

.one {
    color: #000000;
    height: 46px;
    line-height: 46px;
}

.two {
    margin-bottom: 16px;
}

.three {
    margin-bottom: 5px;
    color: #333333;
}

.four {
    margin-bottom: 5px;
    color: #333333;
}

.five {
    margin-bottom: 10px;
    color: #333333;
}
.Six {
    height: 53px;
    line-height: 53px;
    font-size: 13px;
    border-top: 1px dashed #ffd7c6;
}

.homebot {
    width: calc(100% - 40px);
    margin: 10px auto;
    color: #999999;
    font-size: 13px;
}

.choose-bot {
    width: 100%;
    height: 98rpx;
    background-color: #ffffff;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    position: fixed;
    bottom: 0px;
    left: 0px;
    box-shadow: 3px 0px 8px rgba(0, 0, 0, 0.16);
}