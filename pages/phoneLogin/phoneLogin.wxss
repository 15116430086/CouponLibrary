/* pages/phoneLogin/phoneLogin.wxss */

.box {
  width: 100%;
  margin: auto;
  overflow: hidden;
}

.home_top {
  position: relative;
  width: 100%;
  height: 350rpx;
  text-align: left;
  line-height: 100rpx;
  color: #fff;
  border-radius: 0 0 50% 50%;
  background: #ff7031;
}

.home_top:after {
  width: 140%;
  height: 350rpx;
  position: absolute;
  left: -20%;
  top: 0;
  z-index: -1;
  content: '';
  border-radius: 0 0 50% 50%;
  background: #ff7031;
}

.v-title {
  font-size: 56rpx;
  font-weight: 600;
  /* margin-bottom: 40rpx; */
  text-indent: 120rpx;
}

.v-tip {
  text-indent: 120rpx;
  font-size: 30rpx;
}

.v-mid {
  width: calc(100% - 132rpx);
  height: 652rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin: 0px auto;
  position: relative;
  top: -120rpx;
  box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.11);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.v-block {
  width: calc(100% - 120rpx);
  height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #ededed;
  justify-content: flex-start;
  margin-bottom: 40rpx;
  /* margin-top: 20rpx; */
}

.v-block image {
  width: 28rpx;
  height: 44rpx;
  display: block;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.v-input {
  margin-bottom: 20rpx;
}

.ip {
  color: #ebe8e8;
  font-size: 32rpx;
}

.v-input1 {
  width: 260rpx;
  height: 44rpx;
  border-right: 1px solid #ededed;
  margin-bottom: 20rpx;
}

.v-btn {
  display: block;
  width: 200rpx;
  height: 44rpx;
  color: #e85819;
  font-weight: 600;
  text-align: right;
  line-height: 44rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.v-true {
  width: 498rpx;
  height: 98rpx;
  line-height: 98rpx;
  color: #fff;
  text-align: center;
  background-color: #e85819;
  font-size: 32rpx;
  border-radius: 20rpx;
  /* margin-top: 60rpx; */
 
}

.v-mes {
  font-size: 30rpx;
  color: #ccc;
}

.v-wxtel {
  font-size: 30rpx;
  color: #016fb4;
  /* margin-bottom: 40rpx; */
  text-decoration: underline;
  background: none;
  border: none;
  /* margin-top: 10rpx; */
  height: 110rpx;
  line-height: 110rpx;
  position: relative;
  top: 20rpx;
}

.v-wxtel::after {
  border: none;
}
