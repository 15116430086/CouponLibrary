/* pages/scanCheck/scanCheck.wxss */

page {
    background-color: #EDEDED;
}

.swiper {
    width: 100%;
    height: 440rpx;
}

.swiper image {
    height: 100%;
    width: 100%;
}

.sc-top {
    width: 100%;
    height: 156rpx;
    background-color: #ffffff;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.sct-left {
    margin-left: 40rpx;
}

.sl-one {
    color: #000000;
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 10rpx;
}

.sl-two {
    color: #E85819;
    font-size: 14px;
}

.sc-btn {
    width: 156rpx;
    height: 60rpx;
    margin-right: 40rpx;
    background: rgba(255, 240, 222, 1);
    border-radius: 15px;
    color: #E85819;
    line-height: 60rpx;
    font-size: 24rpx;
    text-align: center;
}

.ruleBox,
.imageBox {
    margin-top: 20rpx;
    width: 100%;
    background-color: #ffffff;
    height: auto;
}

.ruleBox image,
.imageBox image {
    width: 100%;
    height: 746rpx;
}

.seeBtn {
    width: 100%;
    height: 88rpx;
    background-color: #ffffff;
    color: #E85819;
    font-size: 28rpx;
    text-align: center;
    line-height: 88rpx;
    border-top: 1px solid #EDEDED;
}

.seeBtn image {
    width: 18rpx;
    height: 10rpx;
}

.payStoreBox {
    width: 100%;
    margin-top: 20rpx;
}

.ps-name {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-indent: 40rpx;
    color: #333333;
    font-size: 28rpx;
    background-color: #ffffff;
}


