/* pages/sendTicketOne/sendTicketOne.wxss */

page {
  width: 100%;
  height: 100%;
  /* overflow: hidden; */
}

.home-box {
  width: 100%;
  height: auto;
  /* margin-top: 128rpx; */
  padding-bottom: 128rpx;
}

.top-box {
  width: 100%;
  height: 128rpx;
  background-color: #ff7031;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  align-items: center;
  color: #fff;
  font-size: 28rpx;
  position: fixed;
  top: 0;
  z-index: 100;
  left: 0;
}

.top-box image {
  width: 14rpx;
  height: 22rpx;
  flex-shrink: 1;
  display: block;
  margin-right: 40rpx;
}

.tb-left {
  margin-left: 40rpx;
}

.mes-box {
  display: block;
  width: 100%;
  height: auto;
  overflow: scroll;
}

.ticket-box {
  margin: 10px auto;
  width: calc(100% - 40rpx);
  height: auto;
  border-radius: 20rpx;
  background-color: #fff;
  box-shadow: 0px 3px 10px rgba(0, 0, 0, 0.16);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.null-box {
  margin: 10px auto;
  width: calc(100% - 40rpx);
  height: auto;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color:#999;
  font-size: 32rpx;
}
.null-box image{
  margin-top: 300rpx;
  width: 240rpx;
  height: 160rpx;
  margin-bottom: 10rpx;
}


.tb-title {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  color: #000;
  font-size: 32rpx;
  font-weight: 600;
  width: calc(100% - 200rpx);
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}

.tb-title view {
  width: calc(100% - 60rpx);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.tb-title image {
  width: 34rpx;
  height: 34rpx;
  flex-shrink: 0;
}

.tb-mes {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  color: #333;
  font-size: 28rpx;
  width: calc(100% - 200rpx);
  margin-bottom: 10rpx;
}

