.tb-bot {
  margin-top: 20rpx;
 width: 100%;
  height: 108rpx;
  color: #e85819;
  border-top: 1px #ffd7c6 dashed;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}

.tb-bot view {
  flex: 1;
  text-align: center;
}

.box-bot {
  width: 100%;
  height: 128rpx;
  background-color: #fff;
  z-index: 10;
  position: fixed;
  bottom: 0;
  left: 0;
}

.sendBtn {
  width: 670rpx;
  height: 98rpx;
  background: rgba(232, 88, 25, 1);
  border-radius: 20rpx;
  font-size: 32rpx;
  text-align: center;
  line-height: 98rpx;
  color: #fff;
  margin: 20rpx auto;
}


.dynblock-mes{
  margin-top: 10rpx;
}
.dynblock-mes view {
    margin-bottom: 14rpx;
    white-space: nowrap;
}