.tb-bot {
    margin-top: 20rpx;
    width: calc(100% - 70rpx);
    height: 108rpx;
    color: #E85819;
    border-top: 1px #FFD7C6 dashed;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    font-size: 14px;
}
.tb-bot view{
  flex: 1;
  text-align: center;
}

.box-bot {
    width: 100%;
    height: 140rpx;
    background-color: #FFF;
    z-index: 10;
    position: fixed;
    bottom: 0;
    left: 0;
}

.sendBtn {
    width: 670rpx;
    height: 98rpx;
    background: rgba(232, 88, 25, 1);
    border-radius: 20rpx;
    font-size: 16px;
    text-align: center;
    line-height: 98rpx;
    color: #FFF;
    margin: 10px auto;
}