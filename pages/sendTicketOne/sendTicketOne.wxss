/* pages/sendTicketOne/sendTicketOne.wxss */

.top-box {
    width: 100%;
    height: 128rpx;
    background-color: #FF7031;
    display: flex;
    justify-content: space-between;
    flex-direction: row;
    align-items: center;
    color: #fff;
    font-size: 14px;
    position: fixed;
    top: 0;
    left: 0;
}

.top-box image {
    width: 14rpx;
    height: 22rpx;
    flex-shrink: 1;
    display: block;
    margin-right: 40rpx;
}

.tb-left {
    margin-left: 40rpx;
}

.mes-box {
    margin-top: 128rpx;
    margin-bottom: 160rpx;
    width: 100%;
    height: calc(100% - 288rpx);
    overflow: scroll;
}

.ticket-box {
    margin: 10px auto;
    width: calc(100% - 40rpx);
    height: auto;
    border-radius: 20rpx;
    background-color: #FFF;
    box-shadow: 0px 3px 10px rgba(0, 0, 0, 0.16);
    display: flex;
    flex-direction: column;
    align-items: center;
}

.tb-title {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    color: #000000;
    font-size: 16px;
    font-weight: 600;
    width: calc(100% - 200rpx);
    margin-top: 40rpx;
    margin-bottom: 20rpx;
}

.tb-title image {
    width: 34rpx;
    height: 34rpx;
}

.tb-mes {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    color: #333333;
    font-size: 14px;
    width: calc(100% - 200rpx);
    margin-bottom: 10rpx;
}
