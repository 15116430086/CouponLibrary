/* pages/shopCli/shopCli.wxss */

page {
    background-color: #EDEDED;
}

.v-box {
    width: 100%;
    height: 318rpx;
    background-color: #FF7031;
    display: flex;
    align-items: center;
    justify-content: center;
}

.v-block {
    width: calc(100% - 80rpx);
    height: 224rpx;
    background-color: #FFF;
    border-radius: 20rpx;
    display: flex;
    /* flex-direction: row; */
    align-items: center;
    justify-content: space-around;
}

.v-c {
    width: auto;
    height: 112rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.v-title {
    color: #666666;
    font-size: 24rpx;
    margin-bottom: 20rpx;
}

.v-num {
    color: #333333;
    font-size: 44rpx;
    font-weight: 600;
}

.v-num text {
    font-size: 32rpx;
}

.v-bot {
    width: 100%;
    height: 120rpx;
    background-color: #FFF;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.vb-name {
    color: #000000;
    font-size: 32rpx;
    margin-left: 40rpx;
    font-weight: 600;
}

.v-bot image {
    width: 10rpx;
    height: 18rpx;
    margin-right: 40rpx;
}

.v-right {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.v-right text {
    color: #CCCCCC;
    font-size: 24rpx;
    margin-right: 40rpx;
}