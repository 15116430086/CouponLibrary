/* pages/watchMes/watchMes.wxss */

page {
  background-color: #ededed;
}

.v-box, .v-bot {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.v-top {
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  width: calc(100% - 100rpx);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.v-title {
  width: calc(100% - 200rpx);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #000;
  font-size: 32rpx;
  font-weight: 600;
}

.v-go {
  border: 1px solid #e85819;
  color: #e85819;
  width: 184rpx;
  height: 64rpx;
  border-radius: 32rpx;
  background-color: #fff0de;
  text-align: center;
  line-height: 64rpx;
  font-size: 28rpx;
}

.v-mid {
  width: calc(100% - 100rpx);
  text-align: left;
  color: #333;
  margin-bottom: 40rpx;
  font-size: 28rpx;
}

.v-block {
  width: calc(100% - 100rpx);
  color: #333;
  margin-bottom: 40rpx;
  font-size: 28rpx;
}

.v-c {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.v-class {
  width: calc(100% - 80rpx);
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: space-between;
  padding-top: 40rpx
}

.v-left {
  width: calc(100% - 300rpx);
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.v-name {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  color: #000;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.v-time {
  color: #666;
  font-size: 24rpx;
}

.v-right {
  /* width: 240rpx; */
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

.v-span {
  width: auto;
  padding-left: 5rpx;
  padding-right: 5rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  font-size: 22rpx;
  /* margin-right: 80rpx; */
  white-space: nowrap;
  border-radius: 5rpx;
}

.v-right image {
  width: 14rpx;
  height: 22rpx;
  position: absolute;
  right: 0rpx;
  bottom: -42rpx
}


.home-sel {
    width: calc(100% - 80rpx);
    height: 75rpx;
    margin: 0px auto;
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    justify-content: space-between;
}

.home-span {
    width: 32%;
    white-space: nowrap;
    /* margin-right: 20rpx; */
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    color: #666666;
    font-size: 28rpx;
    background-color: #ffffff;
    border-radius: 20rpx;
    height: 60rpx;
    position: relative;
}
.home-span view{
  width: 125rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: left;
  /* position: relative;
  left: -10rpx; */

}
.home-span image {
    display: block;
    flex-shrink: 0;
    width: 14rpx;
    height: 10rpx;
    /* position: absolute;
    right: 10rpx; */
    border-radius: 10rpx;
}
