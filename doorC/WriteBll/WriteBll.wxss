/* doorC/WriteBll/WriteBll.wxss */
page{
    background-color: #F1F3F9;
}
.v-main{
    background-color: #ffffff;
    width: 100%;
}
.mid-box {
    width: calc(100% - 80rpx);
    margin: 0 auto;
    /* margin-top: 20rpx; */
    height: 88rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.mid-block {
    width: 140rpx;
    height: 72rpx;
    border-radius: 12rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.mid-block view {
    width: 180rpx;
    color: #ED5050;
    font-size: 30rpx;
    white-space: nowrap;
    text-align: center;
    font-weight: 600;
}

.mid-block image {
    width: 16rpx;
    height: 12rpx;
    flex-shrink: 0;
    margin-left: 10rpx;
}

.typename {
    font-size: 30rpx;
    font-weight: 600;
}

.typecolor {
    color: #ED5050;
}

.scroll-month {
    display: flex;
    width: calc(100% - 80rpx);
    margin: 0 auto;
    white-space: nowrap;  
    height: 100rpx;
}

.m-item{
    width: 70rpx;
    height: 80rpx;
    text-align: center;
    display: inline-block;
    line-height: 90rpx;
     margin-right: 50rpx;
     font-weight: 600;
     font-size: 28rpx;
     color: #666666;
}

.s-bot{
    border-bottom: #ED5050 solid 4rpx;
    color: #ED5050;
}

.ListHeader{
    width: calc(100% - 30rpx);
    margin: 0rpx auto;
    margin-top: 20rpx;
    background-color: #ffffff;
    display: flex;
    justify-content: space-between;
    border-bottom: #E6E9F0 solid 1rpx;
    height: 90rpx;
    align-items: center;
    border-top-right-radius: 20rpx;
    border-top-left-radius: 20rpx;
}

.h-name{
    width: 36%;
    text-align: center;
    color: #333333;
    font-size: 28rpx;
}

.h-column{
    text-align: center;  
    margin-right: 25rpx;
    color: #333333;
    font-size: 28rpx;
}


.ListTable{
    width: calc(100% - 30rpx);
    margin: 0rpx auto;
    background-color: #ffffff;
    display: flex;
    justify-content: space-between;

    height: 80rpx;
    align-items: center;
}

.clickimg{
    width: 23rpx;
    height: 23rpx;
}

.i-name{
    width: 38%;
    text-align: right;   
    font-size: 24rpx;
    color: #666666;
}

.i-column{
    text-align: center;  
    margin-right: 20rpx;
    font-size: 24rpx;
    color: #666666;
}


.ListItem{
    width: calc(100% - 30rpx);
    margin: 0rpx auto;
    background-color: #ffffff;
    display: flex;
    justify-content: space-between;
    height: 60rpx;
    align-items: center;
}