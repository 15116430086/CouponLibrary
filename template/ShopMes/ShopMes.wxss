/* template/ShopMes/ShopMes.wxss */

.ticket-all {
    width: 100%;
    height: auto;
    background-color: #fff;
    font-weight: 600;
    margin-bottom: 20rpx;
    border-bottom: 1px  solid #EDEDED;
}

.ticket-box {
    width: calc(100% - 80rpx);
    margin: 0px auto;
    height: 230rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    
}

.ticket-img {
    width: 168rpx;
    height: 168rpx;
    /* margin-left: 40rpx; */
    border-radius: 10rpx;
    flex-shrink: 0
}

.ticket-mes {
    width: calc(100% - 200rpx);
    height: 168rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 30rpx;
    
}

.ticket-sec {
    font-size: 24rpx;
    font-weight: 500;
    line-height: 34rpx;
    display: flex;
    flex-direction: row;
    align-items: flex-start;
   
}

.ticket-secimg {
    margin-right: 16rpx;
    width: 31rpx;
    height: 31rpx;
     position: relative;
    /* top: 5rpx; */
    left: 5rpx;
}

.ticket-sec text {
    width: 428rpx;
    /* overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap; */
}

.ticket-mes-p {
  width: 100%;
    font-size: 32rpx;
    font-weight: 600;
    line-height: 44rpx;
    color: rgba(51, 51, 51, 1);
    overflow:hidden;
text-overflow:ellipsis;
white-space:nowrap;
}

.ticket-mes-ul {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    font-size: 24rpx;
    font-weight: 500;
    line-height: 34rpx;
    color: rgba(153, 153, 153, 1);
}

.ticket-shop {
    width: 100%;
    height: 128rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-top: 1px solid #EDEDED;
    /* border-bottom: 1px solid #EDEDED; */
}

.ticketShop-one {
    text-align: center;
    font-size: 24rpx;
    font-weight: 500;
    line-height: 34rpx;
    color: rgba(153, 153, 153, 1);
    margin-left: 40rpx;
    width: 160rpx;
}

.tsone-one {
    font-size: 28rpx;
    font-weight: 600;
    line-height: 40rpx;
    color: rgba(226, 69, 0, 1);
    margin-bottom: 10rpx;
}

.ticketShop-two {
    margin-left: 70rpx;
    font-size: 24rpx;
    font-weight: 500;
    line-height: 34rpx;
    color: rgba(153, 153, 153, 1);
}

.tstwo-one {
    font-size: 28rpx;
    font-weight: 600;
    line-height: 40rpx;
    color: rgba(51, 51, 51, 1);
    margin-bottom: 10rpx;
}

.tmu-one,.tmu-two{
  white-space: nowrap;
}

.tmu-one{
  width: calc(100% - 190rpx);
  overflow: hidden;
  text-overflow: ellipsis;
}
.tmu-two{
  width: 180rpx;
}