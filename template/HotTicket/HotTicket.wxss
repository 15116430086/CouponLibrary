.hotbox {
    width: 100%;
    height: 240rpx;
    display: flex;
    align-items: flex-start;
    background-color: #ffffff;
}

.hotblock {
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: row;
    align-items: flex-end;
}

.ticket-box {
    width: calc(100% - 100px);
    height: 84px;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.ticket-img {
    width: 84px;
    height: 84px;
    margin-left: 20px;
}

.ticket-mes {
    height: 84px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 15px;
    flex-shrink: 1;
}

.ticket-mesmes {
    color: #333333;
    font-size: 14px;
}

.ticket-sec {
    font-size: 12px;
    font-weight: 500;
    line-height: 17px;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.ticket-ul-p {
    font-size: 16px;
    font-weight: 600;
    line-height: 22px;
    color: rgba(51, 51, 51, 1);
}

.ticket-mes-ul {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    font-size: 12px;
    font-weight: 600;
    line-height: 17px;
    color: rgba(153, 153, 153, 1);
}

.one {
    color: #e85819;
    margin-right: 3px;
}

.two {
    color: #999999;
    margin-left: 3px;
}

.hotbtn {
    width: 180rpx;
    height: 60rpx;
    background: rgba(255, 240, 222, 1);
    font-size: 12px;
    font-weight: 600;
    line-height: 60rpx;
    color: rgba(232, 88, 25, 1);
    border-radius: 15px;
    text-align: center;
    margin-right: 40rpx;
    margin-bottom: 15rpx;
}