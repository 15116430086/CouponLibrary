.hotboxH {
  width: 100%;
  height: 240rpx;
  display: flex;
  align-items: flex-start;
  background-color: #fff;
}

.hotblockH {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: space-between;
}

.ticket-boxH {
  width: calc(100% - 220rpx);
  height: 168rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.ticket-imgH {
  width: 168rpx;
  height: 168rpx;
  margin-left: 40rpx;
  flex-shrink: 0;
  border-radius: 10rpx;
}

.ticket-mesH {
  width: calc(100% - 200rpx);
  height: 168rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 30rpx;
}

.ticket-mesmesH {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #999;
  font-size: 28rpx;
  font-weight: 500;
}

.ticket-ul-pH {
  width: 100%;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 44rpx;
  color: rgba(51, 51, 51, 1);
}
.ticket-mes-pH{
  width: 100%;
  overflow:hidden;
