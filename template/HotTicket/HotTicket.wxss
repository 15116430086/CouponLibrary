.hotboxH {
    width: 100%;
    height: 240rpx;
    display: flex;
    align-items: flex-start;
    background-color: #fff;
}

.hotblockH {
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    justify-content: space-between;
}

.ticket-boxH {
    width: calc(100% - 288rpx);
    height: 168rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-right: 40rpx;
}

.v-left {
    width: 168rpx;
    height: 168rpx;
    margin-left: 40rpx;
    flex-shrink: 0;
    border-radius: 10rpx;
    overflow: hidden;
    position: relative;
}

.v-left view {
    width: 100%;
    height: 42rpx;
    position: absolute;
    bottom: 0px;
    text-align: center;
    line-height: 42rpx;
    color: #FFFFFF;
    font-size: 24rpx;
    white-space: nowrap;
    background: rgba(0, 0, 0, 0.4);
}

.ticket-imgH {
    width: 100%;
    height: 100%;
}

.ticket-mesH {
    width: 100%;
    height: 168rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    /* margin-left: 30rpx; */
}

.ticket-mesmesH {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #999;
    font-size: 28rpx;
    font-weight: 500;
    /* position: relative;
    top: -5rpx; */
}

.v-text {
    display: flex;
    flex-direction: row;
    align-items: center;
    color: #666666;
    font-size: 24rpx;
    white-space: nowrap;
    width: auto;
    /* position: relative;
    top: -5rpx; */
}

.v-text image {
    width: 20rpx;
    height: 26rpx;
    padding-right: 10rpx;
}

.v-top {
    width: 100%;
    display: flex;
    position: relative;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.ticket-ul-pH {
    width: calc(100% - 120rpx);
    font-size: 26rpx;
    font-weight: 600;
    line-height: 44rpx;
    color: rgba(51, 51, 51, 1);
}

.ticket-mes-pH {
    font-size: 32rpx;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.ticket-mes-ulH {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    /* justify-content: space-between; */
    font-size: 24rpx;
    /* font-weight: 600; */
    line-height: 34rpx;
    color: rgba(153, 153, 153, 1);
}

.one {
    color: #e85819;
    /* margin-right: 6rpx; */
}

.two {
    color: #999;
    /* margin-left: 6rpx; */
}

.hotbtnH {
    width: 160rpx;
    height: 60rpx;
    background: #e85819;
    font-size: 24rpx;
    font-weight: 600;
    line-height: 60rpx;
    color: #fff;
    border-radius: 30rpx;
    text-align: center;
    position: absolute;
    right: 0px;
    bottom: 0rpx;
    /* margin-bottom: 15rpx; */
}

.left-block {
    width: 160rpx;
    height: 168rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-right: 40rpx;
    /* align-items: flex-end; */
}

.left-money {
    width: auto;
    white-space: nowrap;
    text-align: right;
    color: #e85819;
    font-size: 32rpx;
}