/* cashM/detail/detail.wxss */
page {
  background-color: #EDEDED;
}

.v-top {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 168rpx;
  background-color: #FFFF;
  margin-bottom: 20rpx;
}

.v-box {
  width: calc(100% - 80rpx);
  height: auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 30rpx;
  justify-content: flex-start;
}

.v-money {
  color: #333333;
  font-size: 32rpx;
  font-weight: 600;
}

.v-price {
  margin-left: 20rpx;
  width: 202rpx;
  border-bottom: 1px solid #EDEDED;
  height: 66rpx;
  font-size: 48rpx;
  font-weight: 600;
  color: #E85819
}

.v-price text {
  font-size: 28rpx;
}

.v-mes {
  width: calc(100% - 80rpx);
  height: auto;
  color:  #666666;
  font-size: 28rpx;
}
.v-mes text{
  color: #F08002;
}


.v-all {
  width: 100%;
  height: auto;
  margin-top: 20rpx;
  background-color: #FFFFFF;
}

.m-block {
  width: calc(100% - 80rpx);
  margin: 0px auto;
  height: 140rpx;
  position: relative;
}

.m-left {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.m-left image {
  width: 88rpx;
  height: 88rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  flex-shrink: 0;
}

.m-mid {
  width: calc(100% - 96rpx);
  height: 88rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.m-right {
  width: 108rpx;
  height: auto;
  text-align: right;
  position: absolute;
  right: 0px;
  top: 80rpx;
}

.m-title {
  width: 98%;
  color: #333;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 500;
}

.m-mes {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.m-time {
  color: #666666;
  font-size: 24rpx;
  margin-right: 20rpx;
}

.m-span {
  width: 36rpx;
  height: 36rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  line-height: 36rpx;
  text-align: center;
}

.m-num {
  color: #429859;
  font-size: 24rpx;
}

.m-txt {
  color: #E85819;
  font-size: 20rpx;
  white-space: nowrap;
}
