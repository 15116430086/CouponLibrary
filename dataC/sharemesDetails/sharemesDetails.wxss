/* data/sharemesDetails/sharemesDetails.wxss */
page{
    background-color: #ededed;
  }
  .v-all{
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #FFFFFF;
  }
  
  .v-block{
    width: calc(100% - 80rpx);
    height: 108rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
  }
  
  .v-title{
    width: 100%;
    font-size: 28rpx;
    color: #333333;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-weight: 600;
    overflow: hidden;
    margin-bottom: 10rpx;
  }
  
  .v-mes{
    font-size: 24rpx;
    color: #999999;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
  }
  
  .v-left{
    width: calc(100% - 140rpx);
    height: auto;
  }
  .v-right{
    width: 120rpx;
    height: auto;
  }
  
  .flex{
    width: calc(100% - 80rpx);
    height: 128rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
  }
   
  .v-bot{
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
  }
  .v-share{
    color: #999999;
    font-size: 24rpx;
    margin-bottom: 10rpx;
    text-align: right;
  }
  
  .send{
    color: #999999;
    font-size: 24rpx;
  }
  .send text{
    color: #FF8700;
  }
  .v-share1{
    color: #FF8700;
    text-align: right;
  
    font-size: 24rpx;
  }
  
  
  .v-send image{
    width: 10rpx;
    height: 18rpx;
    margin-left: 20rpx;
    flex-shrink: 0;
  }
  
  .v-send{
    width: auto;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
  }
  
  .t-box{
    width: calc(100% - 80rpx);
    height: 108rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
  }
  
  .t-box image{
    height: 88rpx;
    width: 88rpx;
    flex-shrink: 0;
    border-radius: 50%;
  }
  .t-block{
    width: calc(100% - 108rpx);
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }
  .t-right{
    width: 254rpx;
    color: #999999;
    font-size: 24rpx;
    text-align: right;
  }
  .t-right text{
    color: #FF8700;
  }
  
  .t-bot{
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
  }