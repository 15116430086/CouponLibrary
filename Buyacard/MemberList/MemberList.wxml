<!--Buyacard/MemberList/MemberList.wxml-->
<wxs module="common" src="../../utils/common.wxs"></wxs>
<view class="home-box">
	<!--按活动查 -->

<view class="stm-mes" wx:if="{{types == 0}}">
		<text style="margin-left:40rpx;">店铺:{{DataList[0].ShopName}},日期:{{DataList[0].PayDate}},总金额￥{{monery}},总订单{{orderCount}}</text>
</view>
<view class="stm-mes" wx:if="{{types == 1}}">
		<text style="margin-left:40rpx;">日期:{{list[0].PayDate}},总金额￥{{monery}},总订单{{orderCount}}</text>
</view>
		<block wx:for="{{DataList}}">
			<view class="order-box">
				<image src="{{item.UserAvatar}}" />
				<view class="o-right">
					<view class="o-top">
						<view class="o-name">{{item.UserName}}</view>
						<view class="o-price">￥{{item.ActualPay}}</view>
					</view>
					<view class="stm-bot">
						<view class="stm-nnn">活动：{{item.ActivityName}}</view>         
						<view class="stm-time">{{common.sysFormatDate(item.PayDate,"yyyy-MM-dd hh:mm",true)}} </view>
					</view>
				</view>
			</view>
		</block>

</view>

